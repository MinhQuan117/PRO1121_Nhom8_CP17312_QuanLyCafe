<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_custommenu_HinhMon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cafe_americano"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txt_custommenu_TinhTrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Còn món"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_textview"
            android:layout_gravity="top|right"
            android:layout_margin="5dp"
            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/giatien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_custommenu_HinhMon"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/txt_custommenu_TenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/muli_black"
            android:gravity="center"
            android:text="Caffè Americano Iced"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giatien"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/txt_custommenu_GiaTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/muli"
            android:gravity="center"
            android:text="10000 VND"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingRight="10dp"/>

    </RelativeLayout>

</LinearLayout>